@using webapp_net8_database.Models
@model IEnumerable<MyDbModel>

@{
	//
}

<div class="row mb-3">
	<div class="col align-content-center">
		<a asp-controller="Home" asp-action="AddEntry" class="btn btn-dark">Add New Entry</a>
	</div>

	<div class="col">
		<input type="text" placeholder="Search" class="form-control" />
	</div>
</div>

<table class="table table-hover">
	<thead>
		<tr>
			<th>Id</th>
			<th>Name</th>
			<th>TimeStamp</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
		@if (Model != null && Model.Count() > 0)
		{
			foreach (MyDbModel m in Model)
			{
				<tr>
					<td>@m.Id</td>
					<td>@m.Name</td>
					<td>@m.TimeStamp</td>
					<td><a asp-controller="Home" asp-action="EditEntry" asp-route-id="@m.Id">Edit</a></td>
				</tr>
			}
		}
		else
		{
			<tr>
				<td></td>
				<td class="text-danger font-monospace">No data</td>
				<td></td>
				<td></td>
			</tr>
		}
	</tbody>
</table>