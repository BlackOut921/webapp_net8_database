@using webapp_net8_database.Models
@model MyDbModel

@{
	ViewData["Title"] = "Add Entry";
}

<h1 class="display-1">@ViewData["Title"]</h1>

<form asp-controller="Home" asp-action="AddEntry" method="post">
	<div class="mb-3">
		<label asp-for="@Model.Name" class="form-label"></label>
		<input asp-for="@Model.Name" class="form-control" required />
	</div>

	<input type="submit" class="btn btn-dark" />
	<div asp-validation-summary="All" class="text-danger"></div>
</form>